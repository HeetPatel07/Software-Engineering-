<!-- res/drawable/border_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E9E6EC" /> <!-- Specify your desired background color here -->
        </shape>
    </item>
    <!-- Border -->
    <item android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent color to only show the stroke as the border -->
            <stroke
                android:width="5dp"
                android:color="@android:color/black" /> <!-- Border color and width -->
        </shape>
    </item>
</layer-list>
